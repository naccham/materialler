<h1>検索結果</h1>
<table>
  <thead>
    <tr>
      <th>サイト名</th>
    </tr>
  </thead>
  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td>
          <%= link_to site.url do %>
            <%= site.title %>
          <% end %>
        </td>
        <td><%= site.introduce %></td>
      </tr>
    <% end %>
  </tbody>
</table>