<div class="contact">
  <div class="contact-wrap">
<table>
  <tbody>
    <tr>
      <td class="text-center" style="width: 100%;">お名前</td>
      <td style="margin-left: 20px;"><%= @contact.name %></td>
    </tr>
    <tr>
      <td class="text-center" style="width: 100%;">返送用メールアドレス</td>
      <td style="margin-left: 20px;"><%= @contact.email %></td>
    </tr>
    <tr>
      <td class="text-center" style="width: 100%;">件名</td>
      <td style="margin-left: 20px;"><%= @contact.title %></td>
    </tr>
    <tr>
      <td class="text-center">メッセージ</td>
      <td style="margin-left: 20px; white-space: pre-wrap;"><%= @contact.body %></td>
    </tr>
  </tbody>
</table>

<div class="soushin-back">
  <%= form_for(@contact) do |f| %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :title %>
    <%= f.hidden_field :body %>
    <span style="margin-right: 30px"><%= f.submit '送信' %></span>
  <% end %>
</div>

<%= form_for @contact, url: back_path do |f| %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :title %>
    <%= f.hidden_field :body %>
    <span style="border: none; background: white; margin-top: 20px;"><%= f.submit '< 入力画面に戻る' %></span>
  <% end %>

  </div>
</div>



