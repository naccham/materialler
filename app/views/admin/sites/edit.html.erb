<div>
  <h1>サイト編集画面</h1>
  <%= form_with model:@site, url: admin_site_path ,local:true do |f| %>
    <h4><%= f.label :title, 'サイト名' %></h4>
    <%= f.text_field :title %>
    <h4><%= f.label :url, 'URL' %></h4>
    <%= f.text_field :url %>
    <h4><%= f.label :introduce, '説明文' %></h4>
    <%= f.text_area :introduce %>
    <div>
      <h4><%= f.label :tag, 'タグ', class: '' %></h4>
    </div>
    <div>
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) %>
    </div>
      <%= f.submit "変更を保存" %>
  <% end %>
</div>