<!DOCTYPE html>
<html>
  <head>
    <title>Materialler</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/910ae00410.js" crossorigin="anonymous"></script>
  </head>

  <body>
      <div class="header">
        <div class="header-wrap">
          <div class="header-logo">
            <%= link_to 'materialler', root_path, class: '' %>
          </div>
          <% if admin_signed_in? %>
          <div class="menu-lists">
            <div class="menu-list"><%= link_to 'サイト一覧', admin_sites_path, class: '' %></div>
            <div class="menu-list"><%= link_to 'タグ一覧', admin_tags_path, class: '' %></div>
            <div class="menu-list"><%= link_to '会員一覧', admin_users_path, class: '' %></div>
            <div class="menu-list"><%= link_to '管理者ログアウト', destroy_admin_session_path, method: :delete ,class: '' %></div>
          </div>

          <% elsif user_signed_in? %>

          <div class="menu-lists">
              <%= link_to 'サイト一覧', sites_path, class: '' %>
          </div>
          <div class="mypage">
            <%= link_to 'マイページ', user_path(current_user.id) %>
          </div>
          <% else %>
          <div class="menu-lists">
            <div class="menu-list"><%= link_to '管理者ログイン', new_admin_session_path, class: '' %></div>
            <div class="menu-list"><%= link_to '会員ログイン', new_user_session_path, class: '' %></div>
          </div>
            <% end %>
          </div>
        </div>

      <div class="main">
        <div class="main-wrap">
          <%= yield %>
        </div>
      </div>

      <div class="footer">
        <div class="footer-wrap">
          <ul>
            <li><%= link_to "materiallerについて", about_path, class: ''  %></li>
            <li><%= link_to "お問合せ", new_contact_path, class: ''  %></li>
          </ul>
        </div>
      </div>

    </div>

  </body>
</html>
